<!-- 设置 -->
<view class="page">
  <view class=" page__bd">
    <form bindsubmit="saveMobile" style="padding-top: 40rpx;">
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__bd">
            <input class="weui-input " maxlength="11" type="number" name="mobile" value="{{mobile}}" placeholder="请输入手机号码 " bindinput="bindinput"></input>
          </view>
        </view>
      </view>
      <view style="margin: 40rpx; ">
        <button class="weui-btn" type="primary" disabled="{{disabled}}" loading="{{loading}}" formType="submit">保存修改手机号</button>
      </view>
    </form>
  </view>
</view>